{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Verification Output Schema",
  "description": "JSON schema for validating test verification output files generated by the test executor",
  "type": "object",
  "properties": {
    "test_case_id": {
      "type": "string",
      "description": "Unique identifier for the test case"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the test case"
    },
    "sequences": {
      "type": "array",
      "description": "Array of test sequences executed",
      "items": {
        "type": "object",
        "properties": {
          "sequence_id": {
            "type": "integer",
            "description": "Unique identifier for the test sequence",
            "minimum": 1
          },
          "name": {
            "type": "string",
            "description": "Name of the test sequence"
          },
          "step_results": {
            "type": "array",
            "description": "Results for each step in the sequence",
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "properties": {
                    "Pass": {
                      "type": "object",
                      "properties": {
                        "step": {
                          "type": "integer",
                          "minimum": 1
                        },
                        "description": {
                          "type": "string"
                        }
                      },
                      "required": ["step", "description"],
                      "additionalProperties": false
                    }
                  },
                  "required": ["Pass"],
                  "additionalProperties": false
                },
                {
                  "properties": {
                    "Fail": {
                      "type": "object",
                      "properties": {
                        "step": {
                          "type": "integer",
                          "minimum": 1
                        },
                        "description": {
                          "type": "string"
                        },
                        "reason": {
                          "type": "string"
                        }
                      },
                      "required": ["step", "description", "reason"],
                      "additionalProperties": false
                    }
                  },
                  "required": ["Fail"],
                  "additionalProperties": false
                },
                {
                  "properties": {
                    "NotExecuted": {
                      "type": "object",
                      "properties": {
                        "step": {
                          "type": "integer",
                          "minimum": 1
                        },
                        "description": {
                          "type": "string"
                        }
                      },
                      "required": ["step", "description"],
                      "additionalProperties": false
                    }
                  },
                  "required": ["NotExecuted"],
                  "additionalProperties": false
                }
              ]
            }
          },
          "all_steps_passed": {
            "type": "boolean",
            "description": "Whether all steps in this sequence passed"
          }
        },
        "required": ["sequence_id", "name", "step_results", "all_steps_passed"],
        "additionalProperties": false
      }
    },
    "total_steps": {
      "type": "integer",
      "description": "Total number of steps across all sequences",
      "minimum": 0
    },
    "passed_steps": {
      "type": "integer",
      "description": "Number of steps that passed",
      "minimum": 0
    },
    "failed_steps": {
      "type": "integer",
      "description": "Number of steps that failed",
      "minimum": 0
    },
    "not_executed_steps": {
      "type": "integer",
      "description": "Number of steps that were not executed",
      "minimum": 0
    },
    "overall_pass": {
      "type": "boolean",
      "description": "Whether the entire test case passed"
    }
  },
  "required": [
    "test_case_id",
    "description",
    "sequences",
    "total_steps",
    "passed_steps",
    "failed_steps",
    "not_executed_steps",
    "overall_pass"
  ],
  "additionalProperties": false
}
