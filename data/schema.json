{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "requirement": {
      "type": "string"
    },
    "item": {
      "type": "integer"
    },
    "tc": {
      "type": "integer"
    },
    "id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "prerequisites": {
      "type": "array",
      "description": "Optional list of prerequisites that must be satisfied before running this test case.",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["manual", "automatic"],
            "description": "Type of prerequisite: 'manual' requires human verification, 'automatic' can be verified programmatically."
          },
          "description": {
            "type": "string",
            "description": "Description of the prerequisite."
          },
          "verification_command": {
            "type": "string",
            "description": "Command to verify the prerequisite (required for automatic type)."
          }
        },
        "required": ["type", "description"],
        "allOf": [
          {
            "if": {
              "properties": {
                "type": {
                  "const": "automatic"
                }
              }
            },
            "then": {
              "required": ["verification_command"]
            }
          }
        ]
      }
    },
    "general_initial_conditions": {
      "type": "object",
      "description": "Top-level general initial conditions. Values can use BDD patterns (e.g., 'create directory \"/tmp/test\"') that are automatically converted to executable commands, or plain text that becomes comments. See docs/BDD_INITIAL_CONDITIONS.md for pattern reference.",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string",
          "description": "A condition statement. Can be a BDD pattern (e.g., 'create directory \"/path\"', 'set environment variable \"VAR\" to \"value\"', 'wait for 5 seconds') or plain text description."
        }
      }
    },
    "initial_conditions": {
      "type": "object",
      "description": "Top-level initial conditions specific to devices/systems. Values can use BDD patterns (e.g., 'file \"/path\" should exist', 'restart service \"nginx\"') that are automatically converted to executable commands, or plain text that becomes comments. See docs/BDD_INITIAL_CONDITIONS.md for pattern reference.",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string",
          "description": "A condition statement. Can be a BDD pattern (e.g., 'ping device \"192.168.1.1\" with 3 retries', 'port 80 on \"localhost\" should be open') or plain text description."
        }
      }
    },
    "hydration_vars": {
      "type": "object",
      "description": "Environment variables that need hydration. Each key is the variable name, and the value is an object with metadata.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the environment variable."
          },
          "description": {
            "type": "string",
            "description": "Description of the environment variable."
          },
          "default_value": {
            "type": "string",
            "description": "Default value for the environment variable."
          },
          "required": {
            "type": "boolean",
            "description": "Whether this environment variable is required.",
            "default": false
          }
        },
        "required": ["name"]
      }
    },
    "test_sequences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "variables": {
            "type": "object",
            "description": "Sequence-scoped variables that can be declared and used throughout the test sequence.",
            "additionalProperties": {
              "type": "string"
            }
          },
          "initial_conditions": {
            "type": "object",
            "description": "Sequence-level initial conditions. Values can use BDD patterns (e.g., 'wait until file \"/tmp/ready\" exists with timeout 30 seconds') that are automatically converted to executable commands, or plain text that becomes comments. See docs/BDD_INITIAL_CONDITIONS.md for pattern reference.",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "A condition statement. Can be a BDD pattern or plain text description."
              }
            }
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "step": {
                  "type": "integer"
                },
                "manual": {
                  "type": "boolean"
                },
                "description": {
                  "type": "string"
                },
                "command": {
                  "type": ["string", "boolean"]
                },
                "capture_vars": {
                  "oneOf": [
                    {
                      "type": "array",
                      "description": "Array of capture variable definitions with name and either capture pattern or command.",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "description": "Variable name to capture value into."
                          },
                          "capture": {
                            "type": "string",
                            "description": "Regex pattern for extracting value from COMMAND_OUTPUT."
                          },
                          "command": {
                            "type": "string",
                            "description": "Command to execute to obtain the variable value."
                          }
                        },
                        "required": ["name"],
                        "oneOf": [
                          {
                            "required": ["capture"],
                            "not": {
                              "required": ["command"]
                            }
                          },
                          {
                            "required": ["command"],
                            "not": {
                              "required": ["capture"]
                            }
                          }
                        ]
                      }
                    },
                    {
                      "type": "object",
                      "description": "Legacy format: Variable names as keys with regex patterns as values for extracting values from COMMAND_OUTPUT.",
                      "additionalProperties": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "expected": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "result": {
                      "type": ["string", "integer"]
                    },
                    "output": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "result",
                    "output"
                  ]
                },
                "verification": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "condition": {
                              "type": "string"
                            },
                            "if_true": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "if_false": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "always": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
                          "required": ["condition"]
                        }
                      ]
                    },
                    "output": {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "condition": {
                              "type": "string"
                            },
                            "if_true": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "if_false": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "always": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
                          "required": ["condition"]
                        }
                      ]
                    },
                    "output_file": {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "condition": {
                              "type": "string"
                            },
                            "if_true": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "if_false": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "always": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
                          "required": ["condition"]
                        }
                      ]
                    },
                    "general": {
                      "type": "array",
                      "description": "General verification conditions that can be evaluated.",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "description": "Name or description of the verification check."
                          },
                          "condition": {
                            "type": "string",
                            "description": "Condition expression to evaluate for this verification."
                          }
                        },
                        "required": ["name", "condition"]
                      }
                    }
                  },
                  "required": [
                    "result",
                    "output"
                  ]
                }
              },
              "required": [
                "step",
                "description",
                "command",
                "expected"
              ]
            }
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "initial_conditions",
          "steps"
        ]
      }
    }
  },
  "required": [
    "requirement",
    "item",
    "tc",
    "id",
    "description",
    "general_initial_conditions",
    "initial_conditions",
    "test_sequences"
  ]
}
